pipeline {
    agent any

    stages {
        stage('Test') {
            agent {
                dockerfile {
                    dir 'server'
                }
            }

            steps {
                sh 'cd handlers/ && go test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker-compose up -d --build app'
            }
        }
    }
}
